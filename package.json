{
	"name": "veco",
	"description": "A toolchain for svg generation",
	"main": "./dist/runtime/index.js",
	"scripts": {
		"compile": "concurrently npm:compile:lib npm:compile:preview",
		"compile:watch": "concurrently npm:compile:lib:watch npm:compile:preview:watch",
		"compile:lib": "tsc",
		"compile:lib:watch": "tsc -w",
		"compile:preview": "webpack --config src/preview/webpack.config.js",
		"compile:preview:watch": "webpack-dev-server --config src/preview/webpack.config.js",
		"clean": "rimraf dist test/out/data test/out/src test/out/test",
		"test": "npm run clean && tsc -p test/tsconfig.json && ava",
		"test:watch": "npm run clean && concurrently -n tsc,ava \"tsc -p test/tsconfig.json -w\" \"ava -w\""
	},
	"bin": {
		"veco": "./dist/cli/index.js"
	},
	"devDependencies": {
		"@types/escape-html": "0.0.20",
		"@types/express": "^4.17.3",
		"@types/is-glob": "^4.0.1",
		"@types/json5": "0.0.30",
		"@types/klaw-sync": "^6.0.0",
		"@types/mkdirp": "^1.0.0",
		"@types/node": "^13.7.6",
		"@types/resolve": "^1.14.0",
		"@types/ws": "^7.2.2",
		"ava": "^3.5.0",
		"concurrently": "^5.1.0",
		"css-loader": "^3.4.2",
		"html-webpack-plugin": "^3.2.0",
		"preact": "^10.3.3",
		"rimraf": "^3.0.2",
		"sass": "^1.26.2",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.1.3",
		"ts-loader": "^6.2.1",
		"url-loader": "^3.0.0",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"@phylum/command": "^1.2.0",
		"ansi-colors": "^4.1.1",
		"anymatch": "^3.1.1",
		"chokidar": "^3.3.1",
		"escape-html": "^1.0.3",
		"express": "^4.17.1",
		"is-glob": "^4.0.1",
		"json5": "^2.1.1",
		"klaw-sync": "^6.0.0",
		"mkdirp": "^1.0.3",
		"resolve": "^1.15.1",
		"typescript": "^3.8.2",
		"v8-compile-cache": "^2.1.0",
		"ws": "^7.2.2"
	},
	"ava": {
		"verbose": true,
		"files": [
			"test/out/test/**/*-test.js"
		],
		"ignoredByWatcher": [
			"test/out/data"
		]
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.1",
		"utf-8-validate": "^5.0.2"
	}
}
